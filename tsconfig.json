{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "ES6",
      "ES2015",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "jsx": "react",
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules", //<-- this would be needed in case of VS2015
    "node_modules/@typings",
    "typings"
  ]
}